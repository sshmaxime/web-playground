{
	"extends": "@web-playground/config-typescript/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@web-playground/ui/*": ["../../packages/ui/src/*"],
			"@components/*": ["src/components/*"],
			"@hooks/*": ["src/hooks/*"],
			"@assets/*": ["src/assets/*"],
			"@schemas/*": ["src/schemas/*"],
			"@config/*": ["src/config/*"],
			"@server/*": ["src/server/*"],
			"@store/*": ["src/store/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
